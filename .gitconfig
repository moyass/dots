[filter "media"]
clean = git-media-clean %f
smudge = git-media-smudge %f

[user]
name = Guy Hughes
email = guy@guyhughes.ca

[credential]
helper = cache
# helper = osxkeychain on osx if you're lazy

[alias]
br = branch
cb = "!sh -c 'git branch $1 && git ch $1' -"
ctb = "!sh -c 'git cb topics/$1' -"
ci = commit
ch = checkout
fc = commit -am 'Initial commit.'
cpush = "!sh -c 'git commit -au -m \"$1\" && git push -u origin' -"
d = diff
st = status --short
graph = log --graph
last = log -n 10
whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"

[color]
ui = auto

[color "diff"]
whitespace = red reverse

[core]
whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
autocrlf = input
editor = vim
excludesfile = ~/.gitignore

[github]
user = guyhughes

[branch]
autosetupmerge = true
[pager]
color = true
[merge]
stat = true
[log]
abbrevCommit = true
[diff "zip"]
textconv = unzip -c -a
[format]
pretty = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset
graph = true

[url "git@gist.github.com:"]
insteadOf = "gist:"
pushInsteadOf = "gist:"
pushInsteadOf = "git://gist.github.com/"

[rebase]
stat = true

[help]
autocorrect = 1

[daemon]
uploadarch = true

[push]
default = current

[mergetool]
keepBackup = true
