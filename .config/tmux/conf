# KEYS   # {{{1
# quick view of processes
bind-key '~' split-window -v -p 50 "htop"

# }}}1

# PRETTY: Panes # {{{1
set-option -g window-status-bell-style "bg=red,fg=white,bright"
set-option -g window-status-content-style "fg=yellow,bright"
set-option -g window-status-activity-style "fg=green"
set-option -g window-status-current-style "fg=magenta"
set-option -g pane-border-style "fg=black"
set-option -g pane-active-border-style "fg=black"
# }}}

# PRETTY: Status Bar# {{{1
set-option -g status-interval 1
set-option -g status-style 'fg=white,none'
set-option -g status-utf8 on
set-option -g status-right-length 40
set-option -g status-left-length 40
set-option -g status-left '#[fg=black,bold]#{session_name} #[fg=black,none]â€¢#[default]'
set-option -g status-right ''
# status right is filled by ~/.profile.d with remote user & host

